<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextClock
        android:id="@+id/txtClock"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:text="date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtClock"
        app:layout_constraintTop_toBottomOf="@+id/txtClock" />

    <TextView
        android:id="@+id/txtWeek"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:text="week"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtClock"
        app:layout_constraintTop_toBottomOf="@+id/txtClock" />

    <ImageButton
        android:id="@+id/btnZuoYeBang"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        android:background="@color/transparent"
        android:onClick="q"
        android:scaleType="centerInside"
        android:src="@drawable/btn_zuoyebang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/transparent_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>